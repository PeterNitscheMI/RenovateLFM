{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch", "lockFileMaintenance"],
      "groupName": "all non-major npm dependencies"
    }
  ],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"],
    "groupName": "all non-major npm dependencies"
  }
}
